                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" of " />

            <TextView
                android:id="@+id/total_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
