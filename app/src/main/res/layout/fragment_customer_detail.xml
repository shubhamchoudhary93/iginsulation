<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".stock.StockDetailFragment">

    <LinearLayout style="@style/general_vertical_linear_layout">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/header"
                app:title="Customer Details" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/customer_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="name" />

                <TextView
                    android:id="@+id/customer_detail_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="phone" />

                <TextView
                    android:id="@+id/customer_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="address" />

                <TextView
                    android:id="@+id/customer_detail_opening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="opening balance" />

                <TextView
                    android:id="@+id/customer_detail_current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="current balance" />

                <Button
                    android:id="@+id/customer_detail_modify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="modify" />

                <Button
                    android:id="@+id/customer_detail_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="delete" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>