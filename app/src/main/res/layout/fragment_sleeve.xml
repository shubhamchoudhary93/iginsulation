<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".rateList.SleeveFragment">

    <LinearLayout style="@style/general_vertical_linear_layout">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/header"
                app:title="Sleeve Rate List" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView style="@style/outer_scroll_view">

            <LinearLayout style="@style/outer_vertical_linear_layout">

                <Button
                    android:id="@+id/button_f_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="F Class" />

                <Button
                    android:id="@+id/button_b_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B Class" />

                <Button
                    android:id="@+id/button_h_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="H Class" />

                <Button
                    android:id="@+id/button_china"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="China" />

                <Button
                    android:id="@+id/button_heat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heat" />

                <Button
                    android:id="@+id/button_cotton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cotton" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>