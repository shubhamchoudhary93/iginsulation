<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".stock.StockNewFragment">

    <LinearLayout style="@style/general_vertical_linear_layout">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/top_app_bar"
                app:title="New Stock" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView style="@style/outer_scroll_view">

            <LinearLayout style="@style/outer_vertical_linear_layout">


                <EditText
                    android:id="@+id/stock_new_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="name"
                    android:ems="10"
                    android:hint="name"
                    android:inputType="textPersonName" />

                <AutoCompleteTextView
                    android:id="@+id/stock_new_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="category"
                    android:ems="10"
                    android:hint="category"
                    android:inputType="textPersonName" />

                <AutoCompleteTextView
                    android:id="@+id/stock_new_sub_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="sub category"
                    android:ems="10"
                    android:hint="sub category"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/stock_new_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="rate"
                    android:ems="10"
                    android:hint="rate"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/stock_new_percentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="percentage"
                    android:ems="10"
                    android:hint="percentage"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/stock_new_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="add" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>