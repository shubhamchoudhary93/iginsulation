<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".shopStock.ShopStockTransactionListFragment">

    <ScrollView style="@style/outer_scroll_view">

        <LinearLayout style="@style/outer_vertical_linear_layout">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/new_text_input_layout"
                android:hint="Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name"
                    style="@style/new_edit_input_layout"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/new_text_input_layout"
                android:hint="Date">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/date"
                    style="@style/new_edit_auto_input_layout"
                    android:inputType="date" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout style="@style/general_horizontal_linear_layout">

                <TextView
                    style="@style/list_shop_stock_transaction_column_one"
                    android:text="Date"
                    android:textSize="30sp" />

                <TextView
                    style="@style/list_shop_stock_transaction_column_two"
                    android:text="Stock"
                    android:textSize="30sp" />

                <TextView
                    style="@style/list_shop_stock_transaction_column_three"
                    android:text="Quantity"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/transaction_one"
                style="@style/general_horizontal_linear_layout">

                <TextView
                    android:id="@+id/transaction_one_date"
                    style="@style/list_shop_stock_transaction_column_one" />

                <TextView
                    android:id="@+id/transaction_one_name"
                    style="@style/list_shop_stock_transaction_column_two" />

                <TextView
                    android:id="@+id/transaction_one_quantity"
                    style="@style/list_shop_stock_transaction_column_three" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/transaction_two"
                style="@style/general_horizontal_linear_layout">

                <TextView
                    android:id="@+id/transaction_two_date"
                    style="@style/list_shop_stock_transaction_column_one" />

