<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".stock.StockListFragment">

    <LinearLayout style="@style/general_vertical_linear_layout">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/header"
                app:title="Stock List" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView style="@style/outer_scroll_view">

            <LinearLayout style="@style/outer_vertical_linear_layout">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/list_column_one"
                        android:text="Name" />

                    <TextView
                        style="@style/list_column_two"
                        android:text="Cat" />

                    <TextView
                        style="@style/list_column_two"
                        android:text="SubCat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stock_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stock_one_name"
                        style="@style/list_column_one" />

                    <TextView
                        android:id="@+id/stock_one_category"
                        style="@style/list_column_two" />

                    <TextView
                        android:id="@+id/stock_one_sub_category"
                        style="@style/list_column_two" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stock_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stock_two_name"
                        style="@style/list_column_one" />

                    <TextView
                        android:id="@+id/stock_two_category"
                        style="@style/list_column_two" />

                    <TextView
                        android:id="@+id/stock_two_sub_category"
                        style="@style/list_column_two" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stock_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stock_three_name"
                        style="@style/list_column_one" />

                    <TextView
                        android:id="@+id/stock_three_category"
                        style="@style/list_column_two" />

                    <TextView
                        android:id="@+id/stock_three_sub_category"
                        style="@style/list_column_two" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stock_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stock_four_name"
                        style="@style/list_column_one" />

                    <TextView
                        android:id="@+id/stock_four_category"
                        style="@style/list_column_two" />

                    <TextView
                        android:id="@+id/stock_four_sub_category"
                        style="@style/list_column_two" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stock_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stock_five_name"
                        style="@style/list_column_one" />

                    <TextView
                        android:id="@+id/stock_five_category"
                        style="@style/list_column_two" />

                    <TextView
                        android:id="@+id/stock_five_sub_category"
                        style="@style/list_column_two" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stock_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stock_six_name"
                        style="@style/list_column_one" />

                    <TextView
                        android:id="@+id/stock_six_category"
                        style="@style/list_column_two" />

                    <TextView
                        android:id="@+id/stock_six_sub_category"
                        style="@style/list_column_two" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stock_seven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stock_seven_name"
                        style="@style/list_column_one" />

                    <TextView
                        android:id="@+id/stock_seven_category"
                        style="@style/list_column_two" />

                    <TextView
                        android:id="@+id/stock_seven_sub_category"
                        style="@style/list_column_two" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stock_eight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stock_eight_name"
                        style="@style/list_column_one" />

                    <TextView
                        android:id="@+id/stock_eight_category"
                        style="@style/list_column_two" />

                    <TextView
                        android:id="@+id/stock_eight_sub_category"
                        style="@style/list_column_two" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stock_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stock_nine_name"
                        style="@style/list_column_one" />

                    <TextView
                        android:id="@+id/stock_nine_category"
                        style="@style/list_column_two" />

                    <TextView
                        android:id="@+id/stock_nine_sub_category"
                        style="@style/list_column_two" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stock_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stock_ten_name"
                        style="@style/list_column_one" />

                    <TextView
                        android:id="@+id/stock_ten_category"
                        style="@style/list_column_two" />

                    <TextView
                        android:id="@+id/stock_ten_sub_category"
                        style="@style/list_column_two" />
                </LinearLayout>

                <LinearLayout style="@style/general_horizontal_linear_layout">

                    <Button
                        android:id="@+id/button_previous_page"
                        style="@style/page_button_previous" />

                    <Button
                        android:id="@+id/button_next_page"
                        style="@style/page_button_next" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Page - " />

                    <TextView
                        android:id="@+id/page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" of " />

                    <TextView
                        android:id="@+id/total_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>