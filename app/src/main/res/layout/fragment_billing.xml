<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".StartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/header"
                app:title="Billing" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView style="@style/outer_scroll_view">

            <LinearLayout style="@style/outer_vertical_linear_layout">

                <Button
                    android:id="@+id/button_customer"
                    style="@style/general_button"
                    android:text="Customer" />

                <Button
                    android:id="@+id/button_stock"
                    style="@style/general_button"
                    android:text="Stock" />

                <Button
                    android:id="@+id/button_transaction"
                    style="@style/general_button"
                    android:text="Transaction" />

                <Button
                    android:id="@+id/button_sale"
                    style="@style/general_button"
                    android:text="Sale" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>