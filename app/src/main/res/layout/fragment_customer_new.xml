<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".customer.CustomerNewFragment">

    <LinearLayout style="@style/general_vertical_linear_layout">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/header"
                app:title="New Customer" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView style="@style/outer_scroll_view">

            <LinearLayout style="@style/outer_vertical_linear_layout">

                <EditText
                    android:id="@+id/customer_new_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="name"
                    android:ems="10"
                    android:hint="name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/customer_new_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="phone"
                    android:ems="10"
                    android:hint="phone"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/customer_new_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="address"
                    android:ems="10"
                    android:hint="address"
                    android:inputType="textPostalAddress" />

                <EditText
                    android:id="@+id/customer_new_opening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="opening balance"
                    android:ems="10"
                    android:hint="opening balance"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/customer_new_current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="current balance"
                    android:ems="10"
                    android:hint="current balance"
                    android:inputType="number" />

                <Button
                    android:id="@+id/customer_new_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="add" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>