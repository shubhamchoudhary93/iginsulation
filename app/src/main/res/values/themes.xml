<resources>
    <style name="Theme.IGInsulation" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">#4CAF50</item>
    </style>

    <style name="list_column_one">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="list_column_two">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="list_shop_stock_column_one">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="list_shop_stock_column_two">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="list_column_sale_name">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">120dp</item>
    </style>

    <style name="list_column_sale_two">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">60dp</item>
    </style>

    <style name="list_column_sale_three">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="list_previous_button">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:text">previous page</item>
    </style>

    <style name="list_next_button">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:text">next page</item>
    </style>
</resources>